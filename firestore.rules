rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public READ access for Announcements, Cases, and Benches
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if false; // Only admin via Console
    }
    
    match /cases/{caseId} {
      allow read: if true;
      allow write: if false; // Only admin via Console
    }
    
    match /benches/{benchId} {
      allow read: if true;
      allow write: if false; // Only admin via Console
    }
    
    // Public WRITE access for Complaints
    match /general_complaints/{complaintId} {
      allow create: if true; // Citizens can submit feedback
      allow read, update, delete: if false; // Only admin via Console
    }
  }
}
